<% provide(:title, 'Регистрация Ученика') %>
<h1>Регистрация Ученика</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@student) do |f| %>
    
    <%= render 'shared/error_messages', object: f.object %>
    
      <%= f.label :Имя %>
      <%= f.text_field :name %>

      <%= f.label :Email %>
      <%= f.email_field :email %>
      
      <%= f.label :Телефон %>
      <%= f.text_field :telephone %>
      
      <%= f.label :'Выбранный Курс' %>
      <%= f.select :course_id, Course.all.map {|f| [f.course, f.id]} %>

      <%= f.label :Пароль %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Подтверждение пароля" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Создать учетную запись", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>